{
    "manifest_version": 2,
    "name": "TradingView NoAds",
    "version": "0.1",
    "description": "Removes the annoying ads and the upgrade to pro message in TradingView",
    "browser_action": {
	"default_icon": {
            "512": "icon-512.png"
      	}
    },
    "content_scripts": [
	{
	    "matches": [ "*://*.tradingview.com/*" ],
      	    "js": [ "index.js" ],
	    "run_at": "document_start"
    	} 
    ],
    "icons": {
	"512": "icon-512.png"
    }
}
